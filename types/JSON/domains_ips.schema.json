{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "types/domains_ips.schema.json",
	"title": "Domains & IPs section file",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": { "type": "string" },
		"meta": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"categories": {
					"type": "object",
					"additionalProperties": {
						"type": "object",
						"additionalProperties": false,
						"properties": {
							"name": { "type": "string" },
							"description": { "type": "string" }
						},
						"required": ["name"]
					}
				}
			},
			"required": ["categories"]
		},
		"data": {
			"type": "array",
			"items": { "$ref": "#/definitions/DomainsIpsRecord" }
		}
	},
	"required": ["meta", "data"],
	"definitions": {
		"DomainsIpsRecord": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"tool": { "type": "string" },
				"categories": {
					"type": "array",
					"items": { "type": "string" }
				},
				"link": { "type": "string" },
				"API": { "type": ["boolean", "null"] },
				"API_note": { "type": "string" },
				"description": { "type": "string" },
				"open_source": { "type": "boolean" },
				"accessibility": { "type": ["boolean", "null"] },
				"accessibility_note": { "type": "string" },
				"maintained": { "type": ["boolean", "null"] },
				"maintained_note": { "type": "string" }
			},
			"required": [
				"tool",
				"categories",
				"API",
				"open_source",
				"accessibility",
				"maintained"
			]
		}
	}
}
